{
  "compilerOptions": {
    "target": "es5",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "jsx": "react-jsx",
    "module": "ESNext",
    "declaration": true,
    "declarationDir": "./dev/dist",
    "sourceMap": false,
    "outDir": "./dev/dist",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "emitDeclarationOnly": true,
    "removeComments": true,
    "paths": {
      "@chat": ["src/module/chat"],
      "@chat/*": ["src/module/chat/*"]
    }
  },
  "include": [
    "./src"
  ],
  "exclude": [
    "./dist",
    "./node_modules",
    "./src//*.test.tsx",
    "./src//*.stories.tsx"
  ]
}